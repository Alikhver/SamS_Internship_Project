<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="alikhver">
        <sqlFile path="db/script/DB generation.sql"/>
    </changeSet>
    <changeSet id="2" author="alikhver">
        <sql>
            alter table my_db.schedule_record modify column time timestamp;
        </sql>
    </changeSet>
    <changeSet id="3" author="alikhver">
        <sql>
            alter table schedule_record
                modify column status enum('BOOKED','AVAILABLE','DONE', 'CANCELED', 'EXPIRED');
        </sql>
    </changeSet>
</databaseChangeLog>